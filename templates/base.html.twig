<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <script>
    function runCommand() {
        $.ajax({
            url: '/run-random-data-command',
            method: 'GET',
            success: function(response) {
            console.log(response); // Afficher la réponse JSON
            },
            error: function(error) {
            console.error(error);
            }
        });
        }

        // Lancer la commande au chargement initial de la page
        runCommand();

        // Définir une minuterie pour lancer la commande à intervalles réguliers (par exemple, toutes les 3 secondes)
        setInterval(runCommand, 3000);

    </script>
        <header>
            <a href="/">Accueil</a>
            <a href="/add-module">Ajouter un module</a>
            <a href="/admin">Dashboard</a>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
